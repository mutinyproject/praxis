#!/bin/sh

. "@@libdir@@"/file.sh

# at a bare minimum, a directory is a theory package/library directory if it contains a theory or a library.
is_theory_dir() {
	[ -d "${1}" ] || error -d "'%s' is not a directory\n" "${1}"

	{ [ -r "${1}"/theory -a -s "${1}"/theory ] || \
		[ -r "${1}"/libraries -a -s "${1}"/libraries ]; } &&
		return 0

	return 1
}

is_repository_dir() {
	[ -d "${1}" ] || error -d "'%s' is not a directory\n" "${1}"

	[ -d "${1}"/packages -a -d "${1}"/metadata ] && \
		[ -d "${1}"/libraries -a -d "${1}"/metadata ] &&
		return 0

	return 1
}

is_package_dir() {
	[ -d "${1}" ] || error -d "'%s' is not a directory\n" "${1}"

	match -E "^[A-Za-z][A-Za-z0-9_+-]*#[a-z0-9\._-]+$" "${1##*/}" && \
		is_theory_dir "${1}" && return 0

	return 1
}

is_library_dir() {
	[ -d "${1}" ] || error -d "'%s' is not a directory\n" "${1}"
	! is_package_dir "${1}" && is_theory_dir "${1}" && return 0
	return 1
}

