#!/bin/sh

. idioms
. "@@libdir@@"/theory.sh

myusage() { usage "theory-action [-r] THEORY..."; }

recurse=false
while getopts :r arg >/dev/null 2>&1; do
    case "${arg}" in
        r)
            recurse=true
            ;;
        ?)
            error "unknown argument -- ${OPTARG}"
            myusage
            ;;
    esac
done
shift $(( OPTIND - 1 ))

[ "$#" -eq 0 ] && myusage

while [ "$#" -gt 0 ]; do
    if ! is_theory_dir "${1}"; then
        die 2 "'${1}' is not a directory containing a package or library"
    fi

    if "${recurse}" && [ -r "${1}"/libraries ]; then
        # TODO(somasis): arguments are not used for anything yet.
        # shellcheck disable=SC2034
        backslash "${1}"/libraries | while read -r library arguments; do
            theory-action -r "@@dbdir@@/libraries/${library}"
        done
    fi

    if test -r "${1}"/action -a -s "${1}"/action; then
        sh -n "${1}"/action && die 3 "syntax error in '${1}/action', dying"
        cat "${1}"/action
    else
        exit
    fi

    shift
done
